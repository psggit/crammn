{
  "name": "crammn-app",
  "version": "1.0.0",
  "description": "Backend and Frontend App for Hosting Crammn App Features",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start:server": "nodemon --inspect server/index.js",
    "start:client": "cd client && npm run start",
    "start:e2e": "set NODE_ENV=dev&&node ./buildScript.js && npm run start:server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md|vue)\""
  },
  "author": "Y Ramesh Rao",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "connect-pg-simple": "^6.2.1",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.2",
    "express-session": "^1.17.2",
    "google-auth-library": "^7.2.0",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.7",
    "pg": "^8.6.0",
    "razorpay": "^2.8.0"
  },
  "devDependencies": {
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2"
  },
  "lint-staged": {
    "*.+(js|jsx)": "eslint --fix",
    "*.+(json|css|md)": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format"
    }
  }
}
